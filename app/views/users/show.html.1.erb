<h1><%= @user.name %>のページ</h1>

  <p>メールアドレス: <%= @user.email %></p>
  <%= image_tag @user.profile_image %>
  <%= link_to 'Edit', edit_user_path(@user) %>

    <div class="row"></div><h2>お気に入りブログ一覧</h2>
    <% @favorites_blogs.each do |favorite| %>
      <% @favorite =  Favorite.find(favorite.id) %>

      <div class="col-xs-12 col-md-6 blog-panel2">
        <h2><%= @favorite.blog.title %></h2>
        <p><%= @favorite.blog.content %></p>
        <p><%= @favorite.blog.created_at %></p>
      </div>
    </div>
    <% end %>
